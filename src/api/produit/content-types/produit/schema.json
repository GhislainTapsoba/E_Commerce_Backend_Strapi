{
  "kind": "collectionType",
  "collectionName": "produits",
  "info": {
    "singularName": "produit",
    "pluralName": "produits",
    "displayName": "Produit"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nom": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "prix": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "actif": {
      "type": "boolean"
    },
    "variantes": {
      "type": "json"
    },
    "ligne_commandes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ligne-commande.ligne-commande"
    },
    "categorie": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categorie.categorie"
    }
  }
}
