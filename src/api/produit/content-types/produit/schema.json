{
  "kind": "collectionType",
  "collectionName": "produits",
  "info": {
    "singularName": "produit",
    "pluralName": "produits",
    "displayName": "Produit"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nom": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "nom",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "description_courte": {
      "type": "text",
      "maxLength": 300
    },
    "prix": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "prix_promo": {
      "type": "decimal",
      "max": 0
    },
    "reference": {
      "type": "string",
      "maxLength": 50,
      "unique": true
    },
    "quantite_stock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "gerer_stock": {
      "type": "boolean",
      "default": true
    },
    "en_stock": {
      "type": "boolean",
      "default": true
    },
    "statut": {
      "type": "enumeration",
      "required": true,
      "default": "actif",
      "enum": [
        "actif",
        "inactif",
        "rupture",
        "bientot"
      ]
    },
    "poids": {
      "type": "decimal",
      "default": 0
    },
    "dimensions": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "image_principale": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "meta_titre": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "produit_en_vedette": {
      "type": "boolean",
      "default": false
    },
    "nouveau_produit": {
      "type": "boolean",
      "default": false
    },
    "mots_cles": {
      "type": "string"
    },
    "informations_complementaires": {
      "type": "json"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categorie.categorie",
      "mappedBy": "produits"
    },
    "variantes": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::variante-produit.variante-produit",
      "inversedBy": "produits"
    }
  }
}
