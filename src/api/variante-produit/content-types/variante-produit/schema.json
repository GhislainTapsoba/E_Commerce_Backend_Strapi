{
  "kind": "collectionType",
  "collectionName": "variante_produits",
  "info": {
    "singularName": "variante-produit",
    "pluralName": "variante-produits",
    "displayName": "Variante Produit"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nom": {
      "type": "string",
      "maxLength": 50,
      "required": true
    },
    "valeur": {
      "type": "string",
      "maxLength": 50,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "couleur",
        "taille",
        "materiau",
        "autre"
      ]
    },
    "ajustement_prix": {
      "type": "decimal",
      "default": 0
    },
    "quantite_stock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "suffixe_reference": {
      "type": "string",
      "maxLength": 10
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "actif": {
      "type": "boolean",
      "default": true
    },
    "ordre_affichage": {
      "type": "integer",
      "default": 0
    },
    "produits": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::produit.produit",
      "mappedBy": "variantes"
    }
  }
}
